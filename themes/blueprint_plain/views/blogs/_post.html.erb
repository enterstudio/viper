<p class="bottom"><%= link_to avatar_for(post.blog.user, :tiny, :class => 'top bottom'), user_path(post.blog.user) %></p>
<h2 class="bottom"><%= link_to post.title, blog_post_path(post.blog, post) %></h2>
<h3 class="alt">by <%= link_to post.blog.user.full_name, user_path(post.blog.user) %></h3>
<p class="quiet small"><%= post.created_at %></p>
<p><%= limit_text post.body_plain, 350 %></p>