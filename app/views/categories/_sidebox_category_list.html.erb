<% titled_box 'Category List',
			  'blue',
			  :edit_link => link_to_if_admin('(Add Category)', new_category_path) do %>
	<ul>
	<% if @categories.length > 0 %>
		<% for category in @categories %>
		<li><%= link_to category.name, category_url(category) %></li>
		<% end %>
	<% else %>
		<li>No categories have been defined.</li>
	<% end %>
	</ul>
<% end %>