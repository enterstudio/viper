<% @title = "New Forum Topic in #{@forum.name}" -%>

<% titled_box @title,
			  'orange',
			  :box_id => 'feature' do %>

	<div class="crumbs" xstyle="margin-top:1.1em;">
	  <%= link_to 'Forums', forums_path %> <span class="arrow">&rarr;</span>
	  <%= link_to h(@forum.name), forum_path(@forum) %> <span class="arrow">&rarr;</span>
	</div>
	
	<h1 id="new_topic">New Topic in <%= @forum.name %></h1>
	<p class="subtitle"><%= "by #{current_user.full_name}" %></p>
	
	<%= error_messages_for :topic %>
	<% form_for :topic, :url  => forum_topics_path(@forum), :html => { :class => 'form' } do |f| -%>
	<fieldset>
		<legend>New Topic</legend>
		<%= render :partial => "form", :object => f %>
	</fieldset>
	<fieldset class="submit">
		<%= submit_tag 'Post Topic' %> | <%= link_to('Cancel', forum_path(@forum)) %>
	</fieldset>
	<% end %>

	<%= javascript_tag "$('topic_title').focus();" %>

<% end %>