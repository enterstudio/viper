<% unless @user.bio[sidebox_bio_section].blank? -%>
	<% titled_box 	sidebox_bio_section.humanize,
					'orange',
					:edit_link => display_edit_link(@user, link_to('(edit)', edit_user_bio_path(@user))),
					:content_css_class => 'small' do %>
					
		<% output = @user.bio.eval(sidebox_bio_section) %>
		<% unless output.is_a?(TagList) -%>
			<%= output %>
		<% else -%>
		<ul>
			<% output.each do |tag| -%>
			<li><%= tag %></li>
			<% end -%>
		</ul>
		<% end -%>
		
	<% end %>
<% end -%>